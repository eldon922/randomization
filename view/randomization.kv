#:kivy 2.0.0

<MainMenu>
    cols: 1
    size: root.width, root.height

    load_file_path: load_file_path
    save_file_path: save_file_path

    dimension_label: dimension_label
    epsilon_label: epsilon_label
    dimension_value: dimension_value
    epsilon_value: epsilon_value

    technique_spinner: technique_spinner


    GridLayout:
        cols: 3
        size_hint: (root.width, 0.075)

        Image:
            source: 'view/assets/browse.jpg'
            size_hint: (0.1, root.height)
        Label:
            id: load_file_path
            text: "No file selected"
            size: self.texture_size
            text_size: self.size
            halign: 'left'
        Button:
            text: "Browse"
            size_hint: (0.2, root.height)
            on_release: root.browse_load()



    GridLayout:
        cols: 1
        size_hint: (root.width, 0.075)
        Spinner:
            id: technique_spinner
            size_hint: (root.width, root.height)
            text: 'Random Projection Perturbation'
            values: 'Random Projection Perturbation', 'Random Rotation Perturbation'
            on_text: root.on_technique_spinner_select(self.text)



    GridLayout:
        cols: 8
        size_hint: (root.width, 0.075)
        spacing: 15

        Image:
            source: 'view/assets/save.jpeg'
            size_hint: (0.1, root.height)
        Label:
            id: save_file_path
            text: "No file selected"
            size: self.texture_size
            text_size: self.size
            halign: 'left'
        Button:
            text: "Browse"
            size_hint: (0.2, root.height)
            on_release: root.browse_save()
        Label:
            id: dimension_label
            size_hint: (0.2, root.height)
            text: "Dimension"
        TextInput:
            id: dimension_value
            size_hint: (0.1, root.height)
        Label:
            id: epsilon_label
            size_hint: (0.15, root.height)
            text: "Epsilon"
        TextInput:
            id: epsilon_value
            size_hint: (0.1, root.height)
        Button:
            text: "Randomize and Save"
            size_hint: (0.4, root.height)
            on_release: root.randomize()



    BoxLayout:
        orientation: "horizontal"
        BoxLayout:
            orientation: "vertical"
            canvas.before:
                Color:
                    rgba: .5, .5, .5, 1
                Line:
                    width: 2
                    rectangle: self.x, self.y, self.width, self.height


        BoxLayout:
            orientation: "vertical"
            canvas.before:
                Color:
                    rgba: .5, .5, .5, 1
                Line:
                    width: 2
                    rectangle: self.x, self.y, self.width, self.height


        BoxLayout:
            orientation: "vertical"
            canvas.before:
                Color:
                    rgba: .5, .5, .5, 1
                Line:
                    width: 2
                    rectangle: self.x, self.y, self.width, self.height
